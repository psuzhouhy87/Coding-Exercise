class Solution {
public:
    bool isPerfectSquare(int num) {
        int n = num/2;
        int sum = 0,i =0;
        while (i<=n){
            sum  = sum+2*i+1;
            if (sum == num) {
                return true;
            }
            else if(sum > num ){
                return false;
            }
            else{
                i++;
            }
        }
        return false;
    }
};

